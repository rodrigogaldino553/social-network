<div class="container mt-4">
  <div class="container-sm d-flex flex-column justify-center align-middle">
    <%= form_with(model: picture) do |form| %>
      <% if picture.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(picture.errors.count, "error") %> prohibited this picture from being saved:</h2>

          <ul>
            <% picture.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <% unless action_name == "edit" %>
        <div class="field form-group">
          <%= form.label :photo, style: "display: block", class: "form-label" %>
          <%= form.file_field :photo, class: "form-control" %>
        </div>
      <% end %>

      <div class="field form-group">
        <%= form.label :legend, style: "display: block", class: "form-label" %>
        <%= form.text_area :legend, class: "form-control" %>
      </div>

      <div>
        <%= form.submit "Post", class: "btn btn-primary w-100 mt-4" %>
      </div>
    <% end %>
  </div>
</div>
