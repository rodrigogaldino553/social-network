<div class="mx-2 mt-4 mb-5 pb-4">
  <!--navigation here-->
  <div>
    <%= render @picture %>
    <h5>You can:</h5>
    <% if policy(@picture).edit? %>
      <div class="d-flex mb-4">
        <%= link_to edit_picture_path(@picture), class: "btn btn-warning text-light mx-2" do %>
          Edit <i class="fa fa-pencil-square" aria-hidden="true"></i>
        <% end %>
        <%= button_to @picture, method: :delete, class: "btn btn-danger" do %>
          Delete <i class="fa fa-trash" aria-hidden="true"></i>
        <% end %>
      </div>
      <hr></hr>
    <% end %>

    <div id="comments" class="mt-5 mx-2">
      <h4>Comments (<%= @picture.comments.count %>)</h4>
      <div class="mb-2">
        <%= render 'pictures/comments/form', picture: @picture %>
      </div>
      <div class="my-5">
        <% @picture.comments.each do |comment| %>
          <%= render 'pictures/comments/comment', comment: comment %>
        <% end %>
      </div>
    </div>
  </div>
</div>
