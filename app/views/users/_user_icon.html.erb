<%= link_to edit_user_registration_path(user) do %>
  <div class="flex px-2 py-3 space-x-3 justify-start items-center">
    <div>
      <% if user.avatar.attached? %>
        <%= image_tag user.avatar, style: "width: 50px; height: 50px; border-radius: 100%;" %>
      <% end %>
    </div>
    <div class="flex justify-center items-center">
      <%= user.name %>
    </div>
  </div>
<% end %>
