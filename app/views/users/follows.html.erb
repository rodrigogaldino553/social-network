<div class="my-4">
  <% follows = nil %>
  <% if defined?(followers).nil? %>
    <% follows = followees %>
    <h4><%= "Who #{user.name} is following" %></h4>
  <% else %>
    <% follows = followers %>
    <h4><%= "Who's following #{user.name}" %></h4>
  <% end %>

  <div>
    <hr>
    <% follows.each do |follow| %>
      <%= render 'users/user_preview', locals: { user: follow, name: true, username: true, follows: true } %>
      <hr>
    <% end %>
  </div>
</div>