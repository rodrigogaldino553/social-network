<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <div class="alert alert-<%= name.to_s == 'notice' ? 'success' : 'danger' %> d-flex flex-row-reverse justify-content-between" role="alert" style="margin: 0 !important;">
      <button aria-hidden="true" aria-label="Close" class="btn-close" data-bs-dismiss="alert" type="button"></button>
      <div class="d-flex flex-row">
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      </div>
    </div>
  <% end %>
<% end %>